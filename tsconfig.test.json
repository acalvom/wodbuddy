{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "types": [
      "vitest/globals", 
      "vitest/importMeta", 
      "@testing-library/jest-dom",
      "node"
    ],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": false
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx", 
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "vitest.setup.ts"
  ],
  "exclude": ["node_modules", "dist"]
}

